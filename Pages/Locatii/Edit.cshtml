@page "{id:int}"
@model EvenimenteSportive.Pages.Locatii.EditModel
@{
    ViewData["Title"] = "Editare Locație";
}

<h1>Editare Locație</h1>

<form method="post">
    <input type="hidden" id="ID" name="Locatie.ID" value="@Model.Locatie.ID" />
    <div class="form-group">
        <label for="Nume">Nume</label>
        <input type="text" id="Nume" name="Locatie.Nume" class="form-control" value="@Model.Locatie.Nume" required />
    </div>
    <div class="form-group">
        <label for="Adresa">Adresa</label>
        <input type="text" id="Adresa" name="Locatie.Adresa" class="form-control" value="@Model.Locatie.Adresa" />
    </div>
    <div class="form-group">
        <label for="Capacitate">Capacitate</label>
        <input type="number" id="Capacitate" name="Locatie.Capacitate" class="form-control" value="@Model.Locatie.Capacitate" required />
    </div>
    <button type="submit" class="btn btn-primary">Salveaza</button>
    <a asp-page="./Index" class="btn btn-secondary">Anuleaza</a>
</form>

